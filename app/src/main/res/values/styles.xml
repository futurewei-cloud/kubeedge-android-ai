<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fontDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#333</item>
    </style>

    <style name="Toolbar">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
        <item name="titleTextColor">#FFF</item>
        <item name="subtitleTextColor">#FFF</item>
        <item name="popupTheme">@style/AppTheme.Toolbar.Popup</item>
    </style>

</resources>
